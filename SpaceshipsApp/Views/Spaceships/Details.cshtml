@model DetailsVM

@{
    ViewBag.Title = Model.SpaceshipName;
    ViewBag.ImageSrc = Model.ImageUrl;
    ViewBag.MainClass = "main-details";
    var detailsHeading = "Spaceship Details";
}

<div class="spaceship-details-container">
    <img src="@Model.ImageUrl" alt="@Model.SpaceshipName" />
    <div class="text-container spaceship-details">
        @await Html.PartialAsync("_DetailsHeader", detailsHeading)

        <div>
            <h3>Name</h3>
            <p>@Model.SpaceshipName</p>
        </div>
    
        <div>
            <h3>Manufacturer</h3>
            <p>@Model.CompanyName</p>
        </div>

        <div>
            <h3>Description</h3>
            <p>@Model.Description</p>
        </div>

        <div>
            <h3>Transport Type</h3>
            <p>@Model.TransportType</p>
        </div>
    </div>

</div>