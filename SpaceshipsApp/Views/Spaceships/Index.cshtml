@model IndexVM

@{
    ViewBag.Title = "Spaceships";
    ViewBag.MainClass = "main-index";
}

<div class="index-cards-container">
    @if (Model.SpaceshipVMs is null)
    {
        <p>Loading</p>
    }
    else
    {
        @foreach (var spaceship in Model.SpaceshipVMs)
        {
            <a asp-controller="Spaceships" asp-action="Details" asp-route-id="@spaceship.Id" class="index-card">
                <img src="@spaceship.ImageUrl" alt="@spaceship.SpaceshipName" />
                <h2>@spaceship.SpaceshipName</h2>
            </a>
        }
    }
</div>