<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    @* Bootstrap *@
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" /> *@

    @* Custom CSS *@
    <link rel="stylesheet" href="@Url.Content("~/css/reset.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/style.css")" />

    @* Google Fonts *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pathway+Extreme:ital,opsz,wght@0,8..144,100..900;1,8..144,100..900&family=Rajdhani:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand" href="/"><img src="/Images/Icons/spaceship-icon.png" alt="Spaceship Icon"/></a>

            <div class="nav-links">
                <a asp-controller="Spaceships" asp-action="Index" class="nav-item"><img src="/Images/Icons/home-icon.png" alt="Home Icon"/> Home</a>
                <a asp-controller="Spaceships" asp-action="Create" class="nav-item"><img src="/Images/Icons/add-icon.png" alt="Add Icon"/> Add Spaceship</a>

                @if(User.Identity!.IsAuthenticated)
                {
                    <a asp-controller="Account" asp-action="Members" class="nav-item"><img src="/Images/Icons/members-icon.png" alt="Members Icon" /> Members</a>
                    <a asp-controller="Account" asp-action="LogOut" class="nav-item"><img src="/Images/Icons/signout-icon.png" alt="Sign Out Icon" />Sign Out</a>
                    <div class="signed-in-container">
                        <p class="signed-in-heading">Signed in as</p>
                        <p class="signed-in-user">@User.Identity.Name</p>
                    </div>

                } else
                {
                    <a asp-controller="Account" asp-action="LogIn" class="nav-item"><img src="/Images/Icons/signin-icon.png" alt="Sign In Icon" /> Sign In</a>
                    <a asp-controller="Account" asp-action="Register" class="nav-item"><img src="/Images/Icons/register-icon.png" alt="Register Icon" /> Register</a>
                }
            </div>
        </nav>

        <img src="/Images/Icons/spaceship-icon.png" alt="Spaceship Icon" />
        <h1 class="page-heading">@ViewBag.Title</h1>
    </header>

    <main role="main" class="@ViewBag.MainClass container mt-4">
        @RenderBody()
    </main>

    <footer class="text-center">
        <p>&copy; @DateTime.Now.Year - Spaceships</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
