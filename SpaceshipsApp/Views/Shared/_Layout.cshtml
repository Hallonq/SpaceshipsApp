<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    @* Bootstrap >:( *@
    @* <link rel="stylesheet" href="https://unpkg.com/@@picocss/pico@@latest/css/pico.classless.min.css"> *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    @* Custom CSS *@
    <link rel="stylesheet" href="@Url.Content("~/css/style.css")" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Spaceships</a>
            <a asp-controller="Account" asp-action="Members">Members</a>
            
            @if(User.Identity!.IsAuthenticated)
            {
                <a asp-controller="Account" asp-action="LogOut">Logout</a>
                <p>Logged in User: @User.Identity.Name</p>
            } else
            {
                <a asp-controller="Account" asp-action="LogIn">Login</a>
                <a asp-controller="Account" asp-action="Register">Register</a>
            }
            <a asp-controller="Spaceships" asp-action="AddSpaceship" class="btn_">Add a New Spaceship</a>
        </div>
    </nav>

    @* <header> *@
    @*     <img src="@ViewBag.ImageSrc" /> *@
    @*     <h1 class="page-heading">@ViewBag.Title</h1> *@
    @* </header> *@

    <main role="main" class="@ViewBag.MainClass container mt-4">
        @RenderBody()
    </main>

    <footer class="text-center text-muted mt-5 mb-3">
        <small>&copy; @DateTime.Now.Year - MyApp</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
